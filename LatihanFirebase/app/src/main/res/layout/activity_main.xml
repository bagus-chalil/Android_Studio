<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/header1">
    <LinearLayout
        android:id="@+id/datadiri"
        android:layout_width="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:text="Data Mahasiswa"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo"
            android:text="Nama : Mohammad Bagus Chalil A"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo"
            android:text="NIM     : A22.2019.02733"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/form"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datadiri"
        android:padding="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entry Data Siswa"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIM :" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNim" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNama" />

    </LinearLayout>
    <Button
        android:text="Simpan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/form"
        android:id="@+id/buttonSimpan" />

    <Button
        android:id="@+id/buttonLihat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Lihat"
        android:layout_toRightOf="@+id/buttonSimpan"
        android:layout_marginLeft="75dp"
        android:layout_below="@+id/form"/>

</RelativeLayout>