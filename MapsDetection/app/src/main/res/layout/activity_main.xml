<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth_bold"
        android:text="Aplikasi Cari Lokasi"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/txt_awal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posisi Awal :"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edit_awal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="200"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/txt_awal" />
        <TextView
            android:id="@+id/txt_akhir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posisi Awal :"
            android:layout_below="@id/edit_awal"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edit_akhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="200"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            android:layout_below="@id/txt_awal"
            android:layout_toRightOf="@id/txt_akhir" />

    </RelativeLayout>
    <Button
        android:id="@+id/btn_cari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>